    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Debug Data Loader",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}/load-test-data/src/app.ts",
            "outFiles": [
                "${workspaceFolder}/**/*.js"
            ],
            "preLaunchTask": "tsc: build - tsconfig.json",

        },
        {
            "type": "node",
            "request": "launch",
            "name": "Debug Data Server",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}/test-data-server/src/app.ts",
            "outFiles": [
                "${workspaceFolder}/**/*.js"
            ],
            "preLaunchTask": "tsc: build - data server"

        },
        {
            "type": "node",
            "request": "launch",
            "name": "Debug ADR",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}/test-data-adr/src/app.ts",
            "outFiles": [
                "${workspaceFolder}/**/*.js"
            ],
            "preLaunchTask": "tsc: build - adr"

        }
    ]
}